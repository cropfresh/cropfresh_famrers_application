# Environment Configuration for CropFresh Farmers App
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file with real secrets to version control

# App Environment
APP_ENV=development
APP_NAME=CropFresh Farmers
APP_VERSION=1.0.0

# API Configuration
API_BASE_URL=https://api-dev.cropfresh.com/v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
REFRESH_TOKEN_EXPIRY=7d
ACCESS_TOKEN_EXPIRY=1h

# Firebase Configuration
FIREBASE_PROJECT_ID=cropfresh-dev
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=cropfresh-dev.firebaseapp.com
FIREBASE_STORAGE_BUCKET=cropfresh-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:android:abc123def456

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_CLOUD_STORAGE_BUCKET=cropfresh-dev-storage

# Third-party Services
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# SMS/OTP Service
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway
PAYMENT_GATEWAY=razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=cropfresh-dev-uploads

# Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FIREBASE_ANALYTICS_ENABLED=true

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=debug
CRASHLYTICS_ENABLED=true

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_DARK_MODE=true
ENABLE_AI_FEATURES=false
ENABLE_FINANCIAL_SERVICES=false

# Development Tools
DEBUG_MODE=true
ENABLE_FLUTTER_INSPECTOR=true
ENABLE_PERFORMANCE_OVERLAY=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cropfresh_dev
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@cropfresh.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=CropFresh Team <noreply@cropfresh.com>

# Social Media Integration
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_API_KEY=your_twitter_api_key
LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Localization
DEFAULT_LANGUAGE=kn
SUPPORTED_LANGUAGES=kn,te,hi,en
TRANSLATION_SERVICE_KEY=your_translation_api_key

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
SSL_CERTIFICATE_PATH=./certs/ssl_cert.pem
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX_REQUESTS=1000

# Notification Services
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_PRIVATE_KEY_PATH=./certs/apns_private_key.p8

# Content Delivery Network
CDN_URL=https://cdn.cropfresh.com
CDN_API_KEY=your_cdn_api_key

# Marketplace Integration
BUSINESS_APP_API_URL=https://api-business.cropfresh.com/v1
PARTNERS_APP_API_URL=https://api-partners.cropfresh.com/v1
CROSS_APP_SHARED_SECRET=your_shared_secret_key

# Government API Integration
GOVT_API_BASE_URL=https://api.gov.in
GOVT_API_KEY=your_govt_api_key
AADHAAR_VERIFICATION_URL=https://api.uidai.gov.in

# Agricultural Data Sources
CROP_PRICE_API_URL=https://api.data.gov.in/catalog/crop-prices
WEATHER_FORECAST_API_URL=https://api.imd.gov.in
SOIL_DATA_API_URL=https://api.nbss.gov.in

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/cropfresh_test
MOCK_API_ENABLED=false
E2E_TEST_TIMEOUT=30000

# Staging/Production Overrides (commented out for development)
# API_BASE_URL=https://api-staging.cropfresh.com/v1
# FIREBASE_PROJECT_ID=cropfresh-staging
# DEBUG_MODE=false
